{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WebsiteRecipes",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "recipes": {
        "type": "array",
        "items": {
          "title": "Recipe",
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid",
              "description": "Universally unique identifier for the recipe"
            },
            "name": {
              "type": "string",
              "description": "Recipe name"
            },
            "source_url":{
              "type": "string",
              "description": "Source url for the recipe obtained"
            },
            "ingredients": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "All ingredients"
              }
            },
            "instructions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["name", "ingredients", "instructions", "source_url"]
        }
      }
    },
    "required": ["name","recipes"]
  }
  